/* pages/person/person.wxss */

@import '../common/common.wxss';

.header {
    display: flex;
    padding-top: 50rpx;
    padding-bottom: 50rpx;
    width: 100%;
    align-items: center;
    flex-direction: column;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    border-radius: 128rpx;
}

.userinfo-nickname {
    color: #858585;
    font-weight: bold;
    margin-top: 15rpx;
    font-size: 30rpx;
}

.userinfo-dercription {
    margin-left: 20rpx;
    margin-right: 20rpx;
    color: #858585;
    margin-top: 15rpx;
    font-size: 30rpx;
}

.menus {
    width: 100%;
    padding-left: 20rpx;
    padding-right: 20rpx;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

.menus-item {
    border-radius: 10rpx;
    background: #fff;
    margin-bottom: 20rpx;
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    flex-direction: row;
    vertical-align: middle;
}

.menus-item-hover {
    background: #eee;
}

.menu-item-text {
    font-size: 30rpx;
    color: #858585;
    line-height: 100rpx;
}

.menus-item-value {
    text-align: right;
    flex: 1;
    color: #bbb;
    line-height: 100rpx;
    padding-right: 10rpx;
    font-size: 30rpx;
}

.icon-left {
    line-height: 100rpx;
    margin-left: 15rpx;
    margin-right: 15rpx;
    color: #858585;
}

.icon-right {
    line-height: 100rpx;
    margin-right: 15rpx;
    color: #ccc;
}

.button-phone {
    text-align: right;
    flex: 1;
    color: #bbb;
    font-size: 30rpx;
    background-color: transparent;
}

.button-phone::after {
    border: none;
    background-color: transparent;
}

.icon-add {
    color: #24c903;
    background-color: transparent;
    font-size: 40rpx;
    width: 100rpx;
    height: 100rpx;
    text-align: center;
}

.icon-add::after {
    border: none;
    background-color: transparent;
}

.icon-add-hover {
    color: #f00;
    background-color: transparent;
}

.children {
    border-radius: 10rpx;
    background: #fff;
    width: 100%;
}

.children-title-bar {
    height: 100rpx;
    display: flex;
    align-items: center;
    flex-direction: row;
    vertical-align: middle;
}

.children-title {
    display: flex;
    align-items: center;
    width: 100%;
    flex-direction: row;
}

.children-title-text {
    font-size: 30rpx;
    color: #858585;
    line-height: 30rpx;
}

.children-title-name {
    margin-left: 50rpx;
    width: 40%;
}

.children-title-age {
    width: 20%;
}

.children-title-oper {
    width: 20%;
    text-align: center;
}

.children-text {
    font-size: 30rpx;
    color: #a5a5a5;
    line-height: 80rpx;
}

.children-delete {
    color: #ee734e;
    background-color: transparent;
}

.children-delete::after {
    border: none;
    background-color: transparent;
}

.children-delete-hover {
    color: #ca2f00;
    background-color: transparent;
}
