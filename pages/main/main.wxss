/* pages/main/main.wxss */
@import '../common/common.wxss';
@import '../../weui.wxss';

.header {
    width: 100%;
    background: rgb(69, 136, 170);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    position: fixed;
    top: 0;
}

.header-hover {
    background: rgb(54, 107, 133);
}

.user-info-avator {
    margin: 20rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
}

.userinfo-nickname {
    font-size: 30rpx;
    color: #fff;
    width: 80%;
    line-height: 100rpx;
}

.userinfo-nickname-right {
    color: #fff;
    line-height: 100rpx;
}

.content {
    margin-top: 120rpx;
    margin-bottom: 140rpx;
}

.menu {
    position: fixed;
    width: 100%;
    bottom: 0;
    display: flex;
    background: rgba(255, 255, 255, 0.747);
    flex-direction: row;
}

.menu-item {
    width: 25%;
    align-items: center;
    padding: 20rpx;
    display: flex;
    flex-direction: column;
}

.menu-item-hover {
    background: rgba(238, 238, 238, 0.5);
}

.menu-item-icon-cycle {
    width: 75rpx;
    height: 75rpx;
    display: flex;
    flex-direction: column;
    border-radius: 40rpx;
    align-items: center;
    justify-content: center;
    border-style: solid;
    border-width: 0rpx;
    box-shadow: 0px 2px 5px 2px #DDDDDD;
}

.menu-item-icon {
    font-size: 40rpx;
    color: #fff;
    align-items: center;
}

.menu-item-text {
    color: #aaa;
    margin-top: 5rpx;
    font-size: 25rpx;
}
