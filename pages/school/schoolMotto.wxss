/* pages/school/schoolMotto.wxss */

@import '../common/common.wxss';

.motto-content {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    padding: 20rpx;
}

.motto-edit {
    display: flex;
    flex-direction: row;
    position: fixed;
    bottom: 0;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100rpx;
    background-color: rgba(240, 240, 240, 0.7);
}

.motto-edit-hover {
    background-color: #f0f0f0;
}

.motto-edit-icon {
    margin-right: 10rpx;
}

.motto-icon {
    line-height: 100rpx;
    color: #0151b9;
}
